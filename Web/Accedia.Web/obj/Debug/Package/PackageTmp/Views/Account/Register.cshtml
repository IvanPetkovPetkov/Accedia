@model Accedia.Web.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}
@{  var listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "София",
        Value = "1"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Пловдив",
        Value = "2"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Стара Загора",
        Value = "3"
    });
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <h3 class="fansy_blue">ИНФОРМАЦИЯ</h3>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            <label class="col-md-* control-label">
                @Html.RadioButtonFor(x => x.IsCompany, "false")
                Физическо лице
            </label>
            <label class="col-md-* control-label">
                @Html.RadioButtonFor(x => x.IsCompany, "true")
                Юридическо лице
            </label>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Снимка", new { @class = "control-label col-md-2" })
        <div class="col-md-*">
            <input type="file" id="Avatar" name="upload"/>
        </div>
        <div class="col-md-*">
            <img id="myimage" src="" alt="" class="img-responsive" />
        </div>
    </div>
    <div class="form-group">
        <div>
            @Html.LabelFor(m => m.Company, new { @class = "col-md-2 control-label fancy_black" })
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.INNumber, new { @class = "col-md-2 control-label fancy_black" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.INNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TaxNo, new { @class = "col-md-2 control-label fancy_black" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TaxNo, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MOL, new { @class = "col-md-2 control-label fancy_black" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MOL, new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <h3 class="fansy_blue">Адрес по данъчна регистрация</h3>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.TownID, new { @class = "col-md-2 control-label fancy_black" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.TownID, listItems, "Избери", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label fancy_black" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <h3 class="fansy_blue">КОНТАКТИ</h3>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label fancy_black" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email2, new { @class = "col-md-2 control-label fancy_black" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email2, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Skype, new { @class = "col-md-2 control-label fancy_black" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Skype, new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <h3 class="fansy_blue">Условия</h3>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.CheckBoxFor(x => x.PrivateDataConditions)
            @Html.LabelFor(x => x.PrivateDataConditions)
            @Html.ValidationMessageFor(x => x.PrivateDataConditions)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.CheckBoxFor(x => x.TermsAndConditions)
            @Html.LabelFor(x => x.TermsAndConditions)
            @Html.ValidationMessageFor(x => x.TermsAndConditions)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Откажи", "Index", "Home", null, new { @class = "btn btn-default col-md-2" })
            <input type="submit" class="btn btn-default col-md-2" value="Потвърди" />
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/accedia")
}
