<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Accedia Task</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/accedia")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse fancy_gray">
                <ul class="nav navbar-nav navbar-inverse fancy_black">
                    <li>@Html.ActionLink("ПОТРЕБИТЕЛИ", "Index", "Home", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("КОРЕКЦИЯ ПРОФИЛ", "UserEdit", "Home", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("УСЛУГИ", "Services", "Home", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("ЗАЯВКИ КУРИЕР", "Orders", "Home", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("ОФИС МРЕЖА", "Offices", "Home", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("КАЛКУЛАТОР", "Calc", "Home", new { area = string.Empty }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <hr class="draw_line">
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="navbar-collapse collapse">
                <ul class="nav center-block navbar-nav fancy_gray">
                    <li>
                        <h4>Тарифи</h4>
                        <br />
                        <span>@Html.ActionLink("Тарифен калкулатор", "Index", "Home", new { area = string.Empty }, new { @class = "fancy_gray" })</span>
                        <br />
                        <span>@Html.ActionLink("Куриерска услуга", "Index", "Home", new { area = string.Empty }, new { @class = "fancy_gray" })</span>
                        <br />
                        <span>@Html.ActionLink("Кагро тарифа", "Index", "Home", new { area = string.Empty }, new { @class = "fancy_gray" })</span>
                        <br />
                        <span>@Html.ActionLink("Пощенска тарифа", "Index", "Home", new { area = string.Empty }, new { @class = "fancy_gray" })</span>
                    </li>
                    <li>
                        <h4>Полезно</h4>
                        <br />
                        <span>@Html.ActionLink("Често задавани въпроси", "Index", "Home", new { area = string.Empty }, new { @class = "fancy_gray" })</span>
                        <br />
                        <span>@Html.ActionLink("Общи условия", "Index", "Home", new { area = string.Empty }, new { @class = "fancy_gray" })</span>
                        <br />
                        <span>@Html.ActionLink("Връзка с нас", "Index", "Home", new { area = string.Empty }, new { @class = "fancy_gray" })</span>
                    </li>
                    <li>
                        <ul class="nav center-block navbar-nav fancy_gray">
                            <li>
                                <a href="https://www.facebook.com/" class="icon facebook"></a>
                            </li>
                            <li>
                                <a href="https://twitter.com/" class="icon twitter"></a>
                            </li>
                            <li>
                                <a href="https://plus.google.com/" class="icon google"></a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <hr />
            <p>&copy; @DateTime.Now.Year - Ivan Petkov</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
